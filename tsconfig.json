{
  "include": ["src", "import", "**/*.d.ts", "./*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "#/*": ["src/*"],
      "@/*": ["src/client/*"]
    }
  }
}
